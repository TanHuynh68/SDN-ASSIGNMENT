<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body>
  <div>
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
      <div class="container-fluid">
        <a class="navbar-brand" href="#">Navbar</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/auth/logout">Logout</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">Link</a>
            </li>
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown"
                aria-expanded="false">
                Dropdown
              </a>
              <ul class="dropdown-menu">
                <li><a class="dropdown-item" href="#">Action</a></li>
                <li><a class="dropdown-item" href="#">Another action</a></li>
                <li>
                  <hr class="dropdown-divider">
                </li>
                <li><a class="dropdown-item" href="#">Something else here</a></li>
              </ul>
            </li>
            <li class="nav-item">
              <a class="nav-link disabled" aria-disabled="true">Disabled</a>
            </li>
          </ul>
          <form class="d-flex" role="search">
            <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
            <button class="btn btn-outline-success" type="submit">Search</button>
          </form>
        </div>
      </div>
    </nav>

    <!-- Modal -->
    <div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h1 class="modal-title fs-5" id="editModalLabel">Edit Watch</h1>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <!-- Form -->
            <form action="/watch/" method="POST" id="editForm">
              <div class="mb-3">
                <label for="inputWatchName" class="form-label">Watch Name</label>
                <input type="text" class="form-control" id="inputWatchName" name="watchName" required>
              </div>
              <div class="mb-3">
                <label for="inputImage" class="form-label">Image URL</label>
                <input type="text" class="form-control" id="inputImage" name="image" required>
              </div>
              <div class="mb-3">
                <label for="inputPrice" class="form-label">Price</label>
                <input type="number" class="form-control" id="inputPrice" name="price" required>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary">Save changes</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>

    <div class="container">
      <table class="table mt-5">
        <thead>
          <tr>
            <th scope="col">Name</th>
            <th scope="col">Image</th>
            <th scope="col">Brand</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
          <% if (data && data.length > 0) { %>
            <% data.forEach((item) => { %>
              <tr>
                <td><%= item.watchName %></td>
                <td><img src="<%= item.image %>" alt="" width="50"></td>
                <td><%= item.brand.brandName %></td>
                <td>
                  <button type="button" class="btn btn-primary edit-button" 
                    data-bs-toggle="modal" data-bs-target="#editModal"
                    data-watchid="<%= item._id %>"
                    data-watchname="<%= item.watchName %>" 
                    data-image="<%= item.image %>" 
                    data-price="<%= item.price %>">
                    Edit
                  </button>
      
                  <button type="button" class="btn btn-danger">Delete</button>
                </td>
              </tr>
            <% }) %>
          <% } else { %>
            <tr>
              <td colspan="4">No watches available</td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>

  <script>
    const editModal = document.getElementById('editModal');
    editModal.addEventListener('show.bs.modal', function (event) {
      const button = event.relatedTarget;

      // Lấy thông tin từ thuộc tính data-* của nút "Edit"
      const watchId = button.getAttribute('data-watchid');
      const watchName = button.getAttribute('data-watchname');
      const image = button.getAttribute('data-image');
      const price = button.getAttribute('data-price');

      // Điền dữ liệu vào các trường input trong modal
      const modalTitle = editModal.querySelector('.modal-title');
      const modalBodyInputName = editModal.querySelector('#inputWatchName');
      const modalBodyInputImage = editModal.querySelector('#inputImage');
      const modalBodyInputPrice = editModal.querySelector('#inputPrice');

      modalTitle.textContent = 'Edit Watch: ' + watchName;
      modalBodyInputName.value = watchName;
      modalBodyInputImage.value = image;
      modalBodyInputPrice.value = price;

      // Cập nhật action của form
      const form = editModal.querySelector('#editForm');
      form.action = `/watch/${watchId}`; // Cập nhật action của form để gửi yêu cầu đến đúng endpoint
    });
  </script>
  
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"></script>
</body>

</html>
